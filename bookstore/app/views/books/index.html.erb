<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.text %></td>
        <td><%= book.author_id %></td>
        <td><%= link_to 'Show', book, class:'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class:'btn btn-warning' %></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

